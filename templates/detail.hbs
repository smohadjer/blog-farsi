<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{title}}</title>
        <meta name="description" content="Blog">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <main>
            {{> header }}
            <section>
                <article id="{{this._id}}" class="post">
                    {{#if date}}
                        <time datetime="{{this.data}}">{{date}}</time>
                    {{/if}}
                    <h1>{{title}}</h1>
                    {{#if tags}}
                        <div class="tags">
                            {{#each tags}}
                                <a href="/tag/{{this}}">{{this}}</a>
                            {{/each}}
                        </div>
                    {{/if}}
                    <div class="content">
                        {{{content}}}
                    </div>
                </article>
            </section>
            {{> footer }}
        </main>
        <script>
            console.log('Hello World');
        </script>
    </body>
</html>

